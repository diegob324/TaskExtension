{
  "manifest_version": 3,
  "name": "Task Manager",
  "description": "A task management extension with reminders",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ]
}
